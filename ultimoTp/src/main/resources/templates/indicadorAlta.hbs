  <!--inicio modal-->
  <!-- Modal HTML Markup -->
<div id="modal" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title">Agregar Formula</h1>
            </div>
            <div class="modal-body">
            <!-- VER COMO LLAMAR AL METODO PARA QUE VERIFIQUE LA FORMULA!!-->
                <form class="form-horizontal" role="form" method="POST" action="/verificarFormula">
                 
                    <div class="form-group">
                        <label for="cuentas" class="control-label">Cuentas</label>
                        <div>
                            <select id="cuentas" type="cuentas" class="form-control" name="cuentas" value="cuentas" autofocus onchange="cargarFormula();">
                            <option value="-1" name "field">Seleccionar</option>
                              {{#each cuentas}}
                              <option value= "{{nombre}}">{{nombre}}</option>
                              {{/each}}
                            </select> 
                        </div>
                    </div>
                        
                    <div class="form-group">
                        <label for="password" class="control-label">Operaciones</label>
                        <div>
                            <span id="operacion" value="*" class="table-up glyphicon glyphicon-remove-sign" onClick="cargarOperacion('*');"></span>
                            
                            <span id="operacion" value="/" class="table-up glyphicon glyphicon-ban-circle" onClick="cargarOperacion('/');"></span>
                            
                            <span id="operacion" value="-" class="table-up glyphicon glyphicon-minus-sign" onClick="cargarOperacion('-');"></span>
                            
                            <span id="operacion" value="+" class="table-up glyphicon glyphicon-plus-sign"
                             onClick="cargarOperacion('+');"></span>
                            
                            <span id="operacion" value="(" class="table-up glyphicon glyphicon-chevron-left" onClick="cargarOperacion('(');" ></span>
                            
                            <span id="operacion" value=")" class="table-up glyphicon glyphicon-chevron-right" onClick="cargarOperacion(')');" ></span>


                         </div>
                    </div>

                    <div class="form-group">
                        <label for="password" class="control-label">Formula</label>
                        <div>
                            <p name="listarFormula" id="listarFormula" ></p>
                            <input type="hidden" id="hdnForm" name="hdnForm">
                        </div>
                     </div>

                    <div class="form-group">
                        <div>
                            <button type="submit" class="btn btn-success" onClick="imprSelec('listarFormula');">
                                Aceptar
                            </button>
                            
                            <button type="button" class="btn btn-danger" onClick="eliminarFormula();">
                                Eliminar Formula
                            </button>

                        </div>
                    </div>
                </form>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


