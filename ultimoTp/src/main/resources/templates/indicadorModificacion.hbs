            <input type="text" name="fname"><br>
        </div>

          
    </div> <!-- Closing fieldContainer -->
    
        <div class="botonConsulta ">
             <button  onclick="obtenerUPDATEindicador()"  type="submit" class="btn btn-primary button-consulta-ind button-border-ind">Guardar</button>
